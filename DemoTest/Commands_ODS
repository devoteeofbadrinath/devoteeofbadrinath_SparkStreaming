use ODS;

CREATE TABLE Account (
    ACNT_ID_NUM varchar(255),
    SHDW_BAL_AMT varchar(255),
    SHDW_BAL_DTTM varchar(255),
    SHDW_BAL_SEQ varchar(255),
    LDGR_BAL_AMT varchar(255),
    LDGR_BAL_DTTM varchar(255),
    LDGR_BAL_SEQ varchar(255)
);

